<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:elevation">0dp</item>
        <item name="colorAccent">@color/design_default_color_primary</item>
        <item name="colorControlActivated">@color/design_default_color_primary</item>
        <item name="colorControlHighlight">@color/design_default_color_primary</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/TitleBarTextColor</item>
        <item name="background">@color/design_default_color_primary</item>
    </style>

    <style name="TitleBarTextColor" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/purple_500</item>
    </style>

</resources>